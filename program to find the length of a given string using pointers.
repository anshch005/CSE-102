#include <stdio.h>
int stringLength(char *str) {
    char *ptr = str;  
// Pointer to traverse the string
    int length = 0;
// Traverse the string until the null character is reached
    while (*ptr != '\0') {
        length++;
        ptr++;
    }
 return length;
}
int main() {
char str[100];
 printf("Enter a string: ");
 scanf("%s", str); // Read the string
printf("Length of the string: %d\n", stringLength(str));
 return 0;
}
